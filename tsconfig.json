{
    "exclude": ["node_modules", "examples", "site"],
    "include": ["./src/*.ts"],
    "files": ["./src/index.ts"],
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "strict": true,
        "jsx": "preserve",
        "declaration": true,
        "incremental": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        // "outDir": "./js",
        "lib": ["es5", "es2015.promise", "dom", "dom.iterable", "scripthost"]
    }
}
