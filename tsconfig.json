{
    "exclude": ["node_modules", "examples", "site"],
    "include": ["src/*.ts"],
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "lib": ["es6", "dom", "dom.iterable", "scripthost"]
    }
}
